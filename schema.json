{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lorawan-schema.org/draft/devices/1/schema",
  "title": "LoRaWAN Devices",
  "description": "LoRaWAN end devices and gateways",
  "definitions": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-z0-9](?:[-]?[a-z0-9]){2,}$",
      "maxLength": 36
    },
    "localFile": {
      "type": "string",
      "pattern": "^(([a-z0-9-]+\\/)+)?([a-z0-9_-]+\\.)+[a-z0-9]{1,}$"
    },
    "logo": {
      "allOf": [
        { "$ref": "#/definitions/localFile" },
        { "pattern": "\\.(png|svg)$" }
      ]
    },
    "photo": {
      "allOf": [
        { "$ref": "#/definitions/localFile" },
        { "pattern": "\\.(png|jpg|jpeg)$" }
      ]
    },
    "video": {
      "type": "string",
      "format": "uri",
      "pattern": "^(?:https?:\\/\\/(?:www\\.)?youtu(?:be\\.com\\/watch\\?v=|\\.be\\/)(?:[\\w\\-\\_]*)(?:&(amp;)?[\\w\\?=]*)?)$|^(?:https?:\\/\\/(?:www\\.)?vimeo\\.com\\/(?:channels\\/(?:\\w+\\/)?|groups\\/([^\\/]*)\\/videos\\/|)(?:\\d+)(?:|\\/\\?))$"
    },
    "region": {
      "enum": [
        "EU863-870",
        "US902-928",
        "CN779-787",
        "EU433",
        "AU915-928",
        "CN470-510",
        "AS923",
        "KR920-923",
        "IN865-867",
        "RU864-870",
        "ISM2400"
      ],
      "description": "Region"
    },
    "vendor": {
      "title": "Vendor",
      "description": "Vendor of a device",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/identifier" },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "pen": {
          "description": "Private Enterprise Number (PEN) assigned by IANA (see https://www.iana.org/assignments/enterprise-numbers/enterprise-numbers)",
          "type": "integer",
          "minimum": 0
        },
        "ouis": {
          "description": "Organization Unique Identifiers (OUI) assigned by IEEE (base-16, see http://standards-oui.ieee.org/oui.txt)",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "[0-9A-F]{6}"
          }
        },
        "vendorID": {
          "type": "integer",
          "description": "VendorID managed by the LoRa Alliance, as defined in TR005",
          "minimum": 0,
          "maximum": 65535
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "logo": { "$ref": "#/definitions/logo" }
      },
      "required": ["id", "name"]
    },
    "dataRateIndex": {
      "type": "integer",
      "minimum": 0,
      "maximum": 15,
      "description": "Data rate index"
    },
    "frequency": {
      "type": "number",
      "minimum": 0,
      "description": "Frequency (MHz)"
    },
    "pingSlotPeriod": {
      "enum": [1, 2, 4, 8, 16, 32, 64, 128],
      "description": "Ping slot period (seconds)"
    },
    "rxDelay": {
      "type": "integer",
      "minimum": 0,
      "maximum": 15
    },
    "rxDataRateOffset": {
      "type": "integer",
      "minimum": 0,
      "maximum": 7
    },
    "regionalParametersVersion": {
      "type": "string",
      "description": "Regional parameters version"
    },
    "frmPayload": {
      "type": "array",
      "minItems": 1,
      "maxItems": 256,
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      }
    },
    "fPort": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "script": {
      "type": "object",
      "properties": {
        "fileName": {
          "allOf": [
            { "$ref": "#/definitions/localFile" },
            { "pattern": "\\.js$" }
          ]
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "input": true,
              "output": true,
              "description": {
                "type": "string"
              }
            },
            "required": ["input", "output"]
          }
        }
      },
      "required": ["fileName"]
    },
    "endDevicePayloadCodec": {
      "title": "End Device Payload Codec",
      "description": "End device payload codec for decoding uplink and encoding downlink",
      "type": "object",
      "examples": [
        {
          "uplinkDecoder": {
            "fileName": "codec.js",
            "examples": [
              {
                "description": "Temperature",
                "input": {
                  "fPort": 1,
                  "bytes": [51, 65, 55]
                },
                "output": {
                  "data": {
                    "temperature": 21.5
                  }
                }
              }
            ]
          },
          "downlinkEncoder": {
            "fileName": "codec.js",
            "examples": [
              {
                "description": "Open gate",
                "input": {
                  "data": {
                    "open": true
                  }
                },
                "output": {
                  "bytes": [1],
                  "fPort": 2
                }
              }
            ]
          },
          "downlinkDecoder": {
            "fileName": "codec.js",
            "examples": [
              {
                "description": "Open gate",
                "input": {
                  "fPort": 2,
                  "bytes": [1]
                },
                "output": {
                  "data": {
                    "open": true
                  }
                }
              }
            ]
          }
        }
      ],
      "definitions": {
        "scriptInput": {
          "type": "object",
          "properties": {
            "state": {
              "type": "object"
            }
          }
        },
        "scriptOutput": {
          "type": "object",
          "properties": {
            "warnings": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "errors": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "state": {
              "type": "object"
            }
          }
        },
        "decodeInput": {
          "allOf": [
            {
              "$ref": "#/definitions/endDevicePayloadCodec/definitions/scriptInput"
            },
            {
              "properties": {
                "bytes": { "$ref": "#/definitions/frmPayload" },
                "fPort": {
                  "allOf": [{ "$ref": "#/definitions/fPort" }, { "minimum": 1 }]
                }
              },
              "required": ["bytes", "fPort"]
            }
          ]
        },
        "decodeOutput": {
          "allOf": [
            {
              "$ref": "#/definitions/endDevicePayloadCodec/definitions/scriptOutput"
            },
            {
              "properties": {
                "data": {
                  "type": "object"
                }
              }
            },
            {
              "if": {
                "properties": {
                  "errors": {
                    "maxItems": 0
                  }
                }
              },
              "then": {
                "required": ["data"]
              }
            }
          ]
        },
        "encodeInput": {
          "allOf": [
            {
              "$ref": "#/definitions/endDevicePayloadCodec/definitions/scriptInput"
            },
            {
              "properties": {
                "data": {
                  "type": "object"
                }
              },
              "required": ["data"]
            }
          ]
        },
        "encodeOutput": {
          "allOf": [
            {
              "$ref": "#/definitions/endDevicePayloadCodec/definitions/scriptOutput"
            },
            {
              "properties": {
                "bytes": { "$ref": "#/definitions/frmPayload" },
                "fPort": {
                  "allOf": [{ "$ref": "#/definitions/fPort" }, { "minimum": 1 }]
                }
              }
            },
            {
              "if": {
                "properties": {
                  "errors": {
                    "maxItems": 0
                  }
                }
              },
              "then": {
                "required": ["bytes"]
              }
            }
          ]
        }
      },
      "properties": {
        "uplinkDecoder": {
          "allOf": [
            { "$ref": "#/definitions/script" },
            {
              "properties": {
                "examples": {
                  "items": {
                    "properties": {
                      "input": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/decodeInput"
                      },
                      "output": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/decodeOutput"
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        "downlinkEncoder": {
          "allOf": [
            { "$ref": "#/definitions/script" },
            {
              "properties": {
                "examples": {
                  "items": {
                    "properties": {
                      "input": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/encodeInput"
                      },
                      "output": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/encodeOutput"
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        "downlinkDecoder": {
          "allOf": [
            { "$ref": "#/definitions/script" },
            {
              "properties": {
                "examples": {
                  "items": {
                    "properties": {
                      "input": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/decodeInput"
                      },
                      "output": {
                        "$ref": "#/definitions/endDevicePayloadCodec/definitions/decodeOutput"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "endDeviceProfile": {
      "title": "End Device Profile",
      "description": "End device capabilities and boot parameters",
      "type": "object",
      "examples": [
        {
          "vendorProfileID": 1,
          "supportsClassB": false,
          "supportsClassC": false,
          "macVersion": "1.0.2",
          "regionalParametersVersion": "RP001-1.0.2-RevB",
          "supportsJoin": true,
          "maxEIRP": 14,
          "supports32bitFCnt": true
        },
        {
          "vendorProfileID": 2,
          "supportsClassB": false,
          "supportsClassC": false,
          "macVersion": "1.0.4",
          "regionalParametersVersion": "RP002-1.0.1",
          "supportsJoin": false,
          "rx1Delay": 1,
          "rx1DataRateOffset": 0,
          "rx2DataRateIndex": 3,
          "rx2Frequency": 869.525,
          "factoryPresetFrequencies": [
            868.1,
            868.3,
            868.5,
            867.1,
            867.3,
            867.5,
            867.7,
            867.9
          ],
          "maxEIRP": 14,
          "supports32bitFCnt": true
        }
      ],
      "properties": {
        "vendorProfileID": {
          "type": "integer",
          "description": "VendorProfileID managed by the vendor, as defined in TR005",
          "minimum": 0,
          "maximum": 65535
        },
        "supportsClassB": {
          "type": "boolean",
          "description": "End device supports class B"
        },
        "classBTimeout": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum delay for the end device to answer a MAC request or confirmed downlink frame (seconds)"
        },
        "pingSlotPeriod": {
          "$ref": "#/definitions/pingSlotPeriod"
        },
        "pingSlotDataRateIndex": {
          "$ref": "#/definitions/dataRateIndex"
        },
        "pingSlotFrequency": {
          "$ref": "#/definitions/frequency"
        },
        "supportsClassC": {
          "type": "boolean",
          "description": "End device supports class C"
        },
        "classCTimeout": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum delay for the end device to answer a MAC request or confirmed downlink frame (seconds)"
        },
        "macVersion": {
          "enum": ["1.0", "1.0.1", "1.0.2", "1.0.3", "1.0.4", "1.1"],
          "description": "LoRaWAN version"
        },
        "regionalParametersVersion": {
          "$ref": "#/definitions/regionalParametersVersion"
        },
        "supportsJoin": {
          "type": "boolean",
          "description": "End device supports join (OTAA) or not (ABP)"
        },
        "rx1Delay": {
          "$ref": "#/definitions/rxDelay",
          "description": "RX1 delay"
        },
        "rx1DataRateOffset": {
          "$ref": "#/definitions/rxDataRateOffset",
          "description": "RX1 data rate offset"
        },
        "rx2DataRateIndex": {
          "$ref": "#/definitions/dataRateIndex",
          "description": "RX2 data rate index"
        },
        "rx2Frequency": {
          "$ref": "#/definitions/frequency",
          "description": "RX2 channel frequency"
        },
        "factoryPresetFrequencies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/frequency"
          },
          "uniqueItems": true,
          "description": "List of factory preset frequencies"
        },
        "maxEIRP": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum EIRP (dBm)"
        },
        "maxDutyCycle": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "examples": [0.1],
          "description": "Maximum duty cycle"
        },
        "supports32bitFCnt": {
          "type": "boolean",
          "description": "End device supports 32bit FCnt"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "supportsClassB": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "classBTimeout",
              "pingSlotPeriod",
              "pingSlotDataRateIndex",
              "pingSlotFrequency"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "supportsClassC": {
                "const": true
              }
            }
          },
          "then": {
            "required": ["classCTimeout"]
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.0"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["TS001-1.0"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.0.1"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["TS001-1.0.1"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.0.2"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["RP001-1.0.2", "RP001-1.0.2-RevB"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.0.3"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["RP001-1.0.3-RevA"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.0.4"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["RP002-1.0.0", "RP002-1.0.1"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "macVersion": {
                "const": "1.1"
              }
            }
          },
          "then": {
            "properties": {
              "regionalParametersVersion": {
                "enum": ["RP001-1.1-RevA", "RP001-1.1-RevB"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "supportsJoin": {
                "const": false
              }
            }
          },
          "then": {
            "required": [
              "rx1Delay",
              "rx1DataRateOffset",
              "rx2DataRateIndex",
              "rx2Frequency",
              "factoryPresetFrequencies"
            ]
          }
        }
      ],
      "required": [
        "supportsClassB",
        "supportsClassC",
        "macVersion",
        "regionalParametersVersion",
        "supportsJoin",
        "maxEIRP"
      ]
    },
    "compliances": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "body": {
            "type": "string",
            "minLength": 1,
            "examples": ["IEC", "ETSI"]
          },
          "norm": {
            "type": "string",
            "minLength": 1
          },
          "standard": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["body", "standard"]
      },
      "uniqueItems": true
    },
    "endDevice": {
      "title": "End Device",
      "description": "LoRaWAN end device",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "hardwareVersions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "version": {
                "type": "string",
                "minLength": 1
              },
              "numeric": {
                "type": "integer",
                "minimum": 0,
                "maximum": 4294967295
              },
              "partNumber": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["version"]
          },
          "uniqueItems": true
        },
        "firmwareVersions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "version": {
                "type": "string",
                "minLength": 1
              },
              "numeric": {
                "type": "integer",
                "minimum": 0,
                "maximum": 4294967295
              },
              "profiles": {
                "type": "object",
                "propertyNames": { "$ref": "#/definitions/region" },
                "patternProperties": {
                  "": {
                    "type": "object",
                    "properties": {
                      "id": { "$ref": "#/definitions/identifier" },
                      "lorawanCertified": {
                        "type": "boolean"
                      },
                      "codec": { "$ref": "#/definitions/identifier" }
                    },
                    "required": ["id"]
                  }
                }
              },
              "hardwareVersions": {
                "type": "array",
                "item": {
                  "type": "string"
                }
              }
            },
            "required": ["version", "profiles"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "sensors": {
          "type": "array",
          "items": {
            "enum": [
              "4-20 ma",
              "accelerometer",
              "altitude",
              "analog input",
              "auxiliary",
              "barometer",
              "battery",
              "button",
              "bvoc",
              "co2",
              "conductivity",
              "current",
              "digital input",
              "dissolved oxygen",
              "distance",
              "dust",
              "energy",
              "gps",
              "gyroscope",
              "humidity",
              "level",
              "light",
              "lightning",
              "link",
              "magnetometer",
              "moisture",
              "motion",
              "particulate matter",
              "ph",
              "pir",
              "potentiometer",
              "power",
              "precipitation",
              "pressure",
              "proximity",
              "pulse count",
              "pulse frequency",
              "radar",
              "rainfall",
              "rssi",
              "snr",
              "solar radiation",
              "sound",
              "strain",
              "surface temperature",
              "temperature",
              "tilt",
              "time",
              "tvoc",
              "uv",
              "vapor pressure",
              "velocity",
              "vibration",
              "voltage",
              "water potential",
              "water",
              "weight",
              "wifi ssid",
              "wind direction",
              "wind speed"
            ]
          }
        },
        "additionalRadios": {
          "type": "array",
          "items": {
            "enum": ["ble", "nfc", "wifi", "cellular"]
          }
        },
        "dimensions": {
          "type": "object",
          "properties": {
            "width": {
              "description": "Width (mm)",
              "type": "number",
              "minimum": 0
            },
            "height": {
              "description": "Height (mm)",
              "type": "number",
              "minimum": 0
            },
            "diameter": {
              "description": "Diameter (mm)",
              "type": "number",
              "minimum": 0
            },
            "length": {
              "description": "Length (mm)",
              "type": "number",
              "minimum": 0
            }
          }
        },
        "weight": {
          "description": "Weight (gram)",
          "type": "number",
          "minimum": 0
        },
        "battery": {
          "type": "object",
          "properties": {
            "replaceable": {
              "type": "boolean"
            },
            "type": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "operatingConditions": {
          "type": "object",
          "properties": {
            "temperature": {
              "type": "object",
              "properties": {
                "min": {
                  "description": "Minimum operating temperature (Celcius)",
                  "type": "number",
                  "minimum": -100,
                  "maximum": 100
                },
                "max": {
                  "description": "Maximum operating temperature (Celcius)",
                  "type": "number",
                  "minimum": -100,
                  "maximum": 100
                }
              },
              "required": ["min", "max"]
            },
            "relativeHumidity": {
              "type": "object",
              "properties": {
                "min": {
                  "description": "Minimum relative humidity",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "max": {
                  "description": "Maximum relative humidity",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "required": ["min", "max"]
            }
          }
        },
        "ipCode": {
          "type": "string",
          "pattern": "^IP[X0-6][X0-9]K?C?D?f?H?M?S?W?$"
        },
        "keyProvisioning": {
          "type": "array",
          "items": {
            "enum": ["custom", "join server", "manifest"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "keySecurity": {
          "enum": ["none", "read protected", "secure element"]
        },
        "productURL": {
          "type": "string",
          "format": "uri"
        },
        "dataSheetURL": {
          "type": "string",
          "format": "uri"
        },
        "resellerURLs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "region": {
                "type": "array",
                "items": {
                  "enum": [
                    "Argentina",
                    "Australia",
                    "Brazil",
                    "Canada",
                    "China",
                    "European Union",
                    "India",
                    "Indonesia",
                    "Japan",
                    "Mexico",
                    "Russia",
                    "Saudi Arabia",
                    "South Africa",
                    "South Korea",
                    "Turkey",
                    "United States",
                    "Other"
                  ]
                }
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "photos": {
          "type": "object",
          "properties": {
            "main": { "$ref": "#/definitions/photo" },
            "other": {
              "type": "array",
              "items": { "$ref": "#/definitions/photo" }
            }
          },
          "required": ["main"]
        },
        "videos": {
