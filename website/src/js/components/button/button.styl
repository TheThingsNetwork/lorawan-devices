.button
  background-color: #fff
  border: 1px solid $c-button-border
  border-radius: 5px
  color: $tc-blue
  cursor: pointer
  font-size: $fs.m
  line-height: $lh.m
  margin: 5px
  min-width: 98px
  outline: 0
  padding: 14px 20px

  &:hover
    background-color: $c-button--subtle-blue

.inline
  font-size: $fs.m
  margin: 0
  padding: 0

.naked
  border: 0

  &:active, &:focus
    border: 0
    outline: 0

.invert
  background: none
  color: #fff

  &:hover
    background: none

.danger
  border-color: $c-error
  color: $c-error

.small
  line-height: $lh.s
  padding: 10px 20px

.secondary
  background: none
  color: $tc-subtle-gray
  text-decoration: underline

  &:hover
    background: none

.subtle
  background-color: $c-button-background-subtle-grey
  border-color: $c-button-background-subtle-grey
  color: $tc-subtle-gray

.bold
  box-shadow: 0 1px 8px 0 rgba(0, 0, 0, .15)
  font-weight: 500
