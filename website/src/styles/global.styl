body
  background: var(--c-background-03)
  color: var(--c-text-03)
  margin: 0

html
  box-sizing: border-box

*, *:after, *:before
  box-sizing: inherit

h1
  color: var(--c-text-02)

h2, h3, h4, h5
  color: var(--c-text-01)
  font-family: $font-family-header

a
  color: var(--c-interactive-01)
  text-decoration: none

.btn
  border: 0
  border-radius: .3rem
  cursor: pointer
  display: block
  font-family: 'Inter', 'Times New Roman'
  font-size: var(--fs-m)
  font-weight: normal
  margin: 0 auto
  opacity: 1
  padding: .75rem 1rem
  text-decoration: none
  text-transform: none
  transition: background-color .2s

  &.primary
    background-color: var(--c-interactive-03)
    color: var(--c-interactive-05)

    &:hover
      background-color: var(--c-interactive-02)

.content
  margin: var(--cs-xl3) auto
  max-width: var(--bp-l)
  padding: 0 var(--ls-xs) var(--ls-xs)
