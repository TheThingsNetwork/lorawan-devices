.device-list
  flex-wrap: wrap
  list-style: none
  margin-bottom: var(--cs-xxs)
  padding: 0
  text-align: left

  .grid
    padding: var(--grid-column-gap)

    > div
      display: flex

  &__image
    align-items: center
    display: flex
    flex: 1
    justify-content: center

  &__item
    background-color: var(--c-background-04)
    border-radius: 10px
    box-shadow: var(--bs-01)
    display: flex
    flex: 1
    flex-direction: column
    min-height: 40rem
    padding: 2rem
    position: relative
    text-align: center

    .btn
      margin: 0 auto
      width: 10rem

    img
      height: auto
      max-width: 50%
      padding: 40px 20px

    h2
      padding: 0 var(--cs-xl3)

  &__description
    font-size: var(--fs-m)
    padding: 0 var(--cs-xxl)

  &__cta
    display: flex
