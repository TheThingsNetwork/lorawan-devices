.device-single
  text-align: center

  .grid
    padding: var(--grid-column-gap)

  &__img
    display: block
    margin: 120px auto 100px
    max-height: 40vh
    max-width: 100%
    width: auto

  &__title
    margin: 0 0 30px
    text-align: center

  &__description
    text-align: center

  &__cta
    display: flex
    justify-content: center
    margin-bottom: var(--ls-l)

    a
      margin: 0 .5rem

  &__specs
    background: var(--c-background-04)
    border-radius: 10px
    box-shadow: var(--bs-01)
    margin-bottom: var(--ls-l)
    padding: var(--cs-xl) var(--cs-xl3)
    text-align: left

    h3
      color: var(--c-text-03)
      margin-top: 0

    ul
      list-style: none
      margin: 0
      padding: 0

    li
      font-size: var(--fs-s)
      padding-bottom: var(--cs-xs)
